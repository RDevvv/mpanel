<body>
<div class="blog-main">
  <header class="wrap" id="blogs-masthead">
    <div class="element1">
      <div id="logo"><a title="" href="home.html"><%= image_tag("logo.png", :border=> "0", :alt=>"Drive Footfall to your stores", :title=>"Drive Footfall to your stores") %></a></div>
    </div>
    <div class="clear"></div>
  </header>
  <div class="miniNavContainer">
    <nav class="miniNav">
      <ul>
        <li><a href="/home.html">Home</a></li>
        <li><a href="/articles">Blog</a></li>
      </ul>
    </nav>
  </div>
  <div id="aCol">
    <div class="aColumn2">
      <div id="content" class="hfeed">
        <section class="posts">
          <div class="content">
            <% @newsfeeds.each do |newsfeed| %>
                <article id="post-154732" class="post entry no-top">
                  <div class="w190 left">
                    <% if newsfeed.attachments.present? %>
                        <%= image_tag(newsfeed.attachments.order(:id).first.image, :alt=> newsfeed.image_alt_text, :title=> newsfeed.image_title) %>
                    <% end %>
                    <span class="caption"><%= newsfeed.image_caption %></span>
                  </div>
                  <header class="postHeader">
                    <div class="postMetaHeader">
                      <span class="kicker"><%= newsfeed.news_type %></span>
                      <!-- date published -->
                      <time><%= newsfeed.created_at.strftime("%e %b %Y %H:%m:%S%p") %></time>
                    </div>
                    <h3 class="entry-title">
                      <%= newsfeed.news_title %>
                    </h3>
                    <address class="byline author vcard"><a title="" class="url fn"><%= link_to newsfeed.journal_name, newsfeed.journal_url %></a> </address>
                  </header>
                  <div class="entry-content2">
                    <p><%= newsfeed.news_excerpt %> <a class="more-link"><%= link_to 'Read moreâ€¦', newsfeed.news_url %></a></p>
                  </div>
                </article>
            <% end %>
          </div>
        </section>
      </div>
    </div>
  </div>
  <div class="twit-container">
    <a class="twitter-timeline" href="https://twitter.com/_shoffr" data-widget-id="453080619451301888" height="420">Tweets by @_shoffr</a>
  </div>
</div>

