<%= render :partial=>'header',:locals=>{:name=>"New Brand"} %>
<div class="row-fluid">
  <div class="span12">
    <div class="box">

      <div class="box-header">
        <span class="title"><i class="icon-account"></i> New Account</span>
      </div>
      <div class="box-content">
        <%= form_for([@current_account,@brand], :url=>merchant_account_brands_path(@current_account,@brand)), :html=>{:class=>"form-horizontal fill-up validatable"}) do |f| %>
          <div class="padded">
            
            <div class="control-group">
              <label class="control-label">Brand Name</label>
              <div class="controls">
              	<%= f.text_field :brand_name, :placeholder=>"Brand Name", :class=>"validate[required]", "data-prompt-position"=>"topLeft"%>
              </div>
            </div>

            <div class="control-group">
              <label class="control-label">Brand Alias</label>
              <div class="controls">
              	<%= f.text_field :brand_alias, :placeholder=>"Brand Alias", :class=>"validate[required]", "data-prompt-position"=>"topLeft"%>
              </div>
            </div>

            <div class="control-group">
              <label class="control-label">Brand Code</label>
              <div class="controls">
                <%= f.text_field :brand_code, :placeholder=>"Short Code", :class=>"validate[required]", "data-prompt-position"=>"topLeft"%>
              </div>
            </div>

            <div class="control-group">
              <label class="control-label">Category</label>
              <div class="controls">
              	<%= f.collection_select :category_id, @categories,:id,:category_name%>
              </div>
            </div>

            <div class="control-group">
              <label class="control-label">Brand Website Url</label>
              <div class="controls">
                <%= f.text_field :website_url,:placeholder=>"Brand Website Url", :class=>"validate[required]", "data-prompt-position"=>"topLeft"%>
              </div>
            </div>            

          </div>  
          <div class="form-actions">
						<button type="submit" class="btn btn-blue">Save changes</button>
          </div>
        <% end %>
      </div>  
    </div>
  </div>
</div>      
