<%= render :partial=>'header' %>
<div class="pull-right">
  <%= link_to "Add Brand",new_merchant_account_brand_path,:class=>"btn btn-info"%>
  <br/>
  <br/>  
</div>
<div class="row-fluid">
  <div class="span12">
    <div class="box">
      <div class="box-header">
        <span class="title">Brands</span>
      </div>
      <div class="box-content">
        <%= form_tag(merchant_account_brands_path(@current_account),:method=>:get) do %>
        <div id="dataTables">
          <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
            <thead>
              <tr>
                <th>Status</th>
                <th>Verified</th>
                <th>Current Brands</th>
                <th>Outlets</th>
                <th>Daily Cap</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
            <% @brands.each do |brand| %>
              <tr>
                <td>
                  <% if brand.is_active == true %>
                    <%= check_box_tag :is_active, :ssl_enabled, :boolean, :default => 1%>
                  <% else %>
                    <%= check_box_tag :is_active %>
                  <% end %>
                </td>
                <td>
                  <% if brand.is_verified == true %>
                    <%= check_box_tag :is_verified, :ssl_enabled, :boolean, :default => 1%>
                  <% else %>
                    <%= check_box_tag :is_verified %>
                  <% end %>
                </td>
                <td><% brand_name = @current_account.brands.pluck(:brand_name) %>
                  <% brand_name.each do |brands| %>
                  <%= brands %>
                  <% end %>
                </td>
                <td></td>
                <td><%= brand.daily_cap %></td>
                <td> <%= link_to 'Destroy', merchant_account_brand_path(@current_account,brand), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr> 
            <% end %>
            </tbody>  
          </table>
      </div>
      <% end %>  
    </div>
  </div>
</div>  