<%= content_for :content_header do %>
  <div class="container-fluid">


    <div class="row-fluid">

     <div class="area-top clearfix">
      <div class="pull-left header">
        <h3 class="title">
          <i class="icon-user"></i>
          User
        </h3>

      </div>
    </div>
  </div>
<% end %>
<%= content_for :breadcrumbs do %>
  <div class="container-fluid padded">
    <div class="row-fluid">

      <!-- Breadcrumb line -->

      <div id="breadcrumbs">
        <div class="breadcrumb-button blue">
          <a href="<%= merchant_merchants_path%>">
            <span class="breadcrumb-label"><i class="icon-home"></i> Home</span>
            <span class="breadcrumb-arrow"><span></span></span>
          </a>  
        </div>
        <div class="breadcrumb-button blue">
          <a href="<%= merchant_account_path(@account)%>">
            <span class="breadcrumb-label">
              <i class="icon-account"></i> Account
            </span>

            <span class="breadcrumb-arrow"><span></span></span>
          </a>
        </div>


        <div class="breadcrumb-button">
          <a href="<%= merchant_account_path(@account)%>">
            <span class="breadcrumb-label">
              <i class="icon-user"></i> User
            </span>
            <span class="breadcrumb-arrow"><span></span></span>
          </a>  
        </div>
      </div>
    </div>
  </div>
<% end %>   
<div class="pull-right">
  <%= link_to "Create User", new_merchant_account_user_path,:class=>"btn btn-info"%>
  <br/>
  <br/>  
</div>
<div class="row-fluid">
  <div class="span12">
    <div class="box">
      <div class="box-header">
        <span class="title">Users</span>
      </div>
      <div class="box-content">
        <div id="dataTables">

          <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
            <thead>
              <tr>

                <th>Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Role</th>
                <th>Brand Access</th>
                <th>Status</th>
                <th>Verified</th>
                <th></th>
              </thead>
            </tr>
          </thead>  
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to user.user_name, edit_merchant_account_user_path(@account,user) %></td>
                <td><%= user.email %></td>
                <td><%= user.mobile_number%></td>
                <td></td>
                <td></td>
                <td>
                  <% if user.is_active == true%>
                  <%= check_box_tag :is_active, :ssl_enabled, :boolean, :default => 1%>
                  <% else %>
                  <%= check_box_tag :is_active %>
                  <% end %>
                </td>
                <td>
                  <%= link_to 'Destroy', merchant_account_user_path(@account,user), method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
                <td>
                  <% if user.email_verified == true%>
                  <%= check_box_tag :email_verified, :ssl_enabled, :boolean, :default => 1%>
                  <% else %>
                  <%= check_box_tag :email_verified %>
                  <% end %>
                </td>
              </tr> 
              <% end %>
            </tbody>  
          </table>
        </div>  
      </div>
    </div>
  </div>      
</div>
    
