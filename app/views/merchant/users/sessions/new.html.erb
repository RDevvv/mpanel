<div class="span4 offset2">
  <div class="padded">
    <div class="login box" style="margin-top: 80px;">
      <div class="box-header">
        <span class="title">Login</span>
      </div>
      <div class="box-content padded">
        <div class="separate-sections">
          <% resource ||= User.new %> 
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class=>"separate-sections") do |f| %>
            <div class="input-prepend">
              <span class="add-on" href="#">
                <i class="icon-user"></i>
              </span>
              <%= f.email_field :email, :autofocus => true, :placeholder=>"username" %>
            </div>
            <div class="input-prepend">
              <span class="add-on" href="#">
                  <i class="icon-key"></i>
              </span>
              <%= f.password_field :password, :placeholder=>"password" %>
            </div>
            <div>
              <%= f.submit "Login", :class=>"btn btn-blue btn-block" %>
            </div>
          <% end %>
        </div>
        <div>
          <a href="sign_up.html">
            Don't have an account?
          </a>
          <%= render "/merchant/users/shared/links" %>
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span6">
        <a href="#" class="btn btn-facebook btn-block"><i class="icon-facebook-sign"></i> Facebook</a>
      </div>
      <div class="span6">
        <a href="#" class="btn btn-twitter btn-block"><i class="icon-twitter"></i> Twitter</a>
      </div>
    </div>
  </div>
</div>  