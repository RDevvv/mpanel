<div class="span4 offset4">
  <div class="padded">
    
    <div class="login box" style="margin-top: 80px;">
      <div class="box-header">
        <span class="title">Login</span>
      </div>

      <div class="box-content padded">
        <div class="separate-sections">
          <% resource ||= User.new %> 
          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class=>"separate-sections") do |f| %>
            <div class="input-prepend">
              <span class="add-on" href="#">
                <i class="icon-user"></i>
              </span>
              <%= f.email_field :email, :autofocus => true, :placeholder=>"username" %>
            </div><br><br>
            <div class="input-prepend">
              <span class="add-on" href="#">
                  <i class="icon-key"></i>
              </span>
              <%= f.password_field :password, :placeholder=>"password" %>
            </div><br><br>
            <div>
              <%= f.submit "Login".html_safe, :class=>"btn btn-blue btn-block" %>
            </div>
          <% end %>
        </div>
        <div>
          <br/>
          <%= render "/merchant/users/shared/devise_links" %>
        </div>
      </div>
    </div>
   
  </div>
</div>  