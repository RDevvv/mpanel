<% resource ||= User.new %>
<% resource_name ||= resource %>
<%= form_for(resource, :as => resource_name, :url => merchant_user_session_path(resource_name)) do |f| %>
  <div>
    <%= f.email_field :email, :autofocus => true, :class=>"span3",:placeholder=>"Email Address" %>
  </div>
  <div><%= f.password_field :password, :class=>"span3",:placeholder=>"Password" %></div>
  <div class="loginfont login-remember-me-font">
    <%= f.check_box :remember_me, :style=>"margin-top: 0%;" %>&nbsp;Remember me
    <%= link_to "Forgot your password?", new_merchant_user_password_path(resource_name), :class=>"pull-right" %>
  </div>
  <div><%= f.submit "Log in", :class => "btn btn-success span3" %></div>
<% end %>