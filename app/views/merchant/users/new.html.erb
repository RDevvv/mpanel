<%= content_for :content_header do %>
<div class="container-fluid">


	<div class="row-fluid">

		<div class="area-top clearfix">
			<div class="pull-left header">
				<h3 class="title">
					<i class="icon-user"></i>
					New User
				</h3>

			</div>
		</div>
	</div>
</div>	
	<% end %>
	<%= content_for :breadcrumbs do %>
	<div class="container-fluid padded">
		<div class="row-fluid">

			<!-- Breadcrumb line -->

			<div id="breadcrumbs">
				<div class="breadcrumb-button blue">
					<a href="<%= merchant_merchants_path%>">
						<span class="breadcrumb-label"><i class="icon-home"></i> Home</span>
						<span class="breadcrumb-arrow"><span></span></span>
					</a>  
				</div>
				<div class="breadcrumb-button blue">
					<a href="<%= merchant_account_path(@account)%>">
						<span class="breadcrumb-label">
							<i class="icon-account"></i> Account
						</span>

						<span class="breadcrumb-arrow"><span></span></span>
					</a>
				</div>


				<div class="breadcrumb-button">
					<a href="<%= merchant_account_path(@account)%>">
						<span class="breadcrumb-label">
							<i class="icon-user"></i> User
						</span>
						<span class="breadcrumb-arrow"><span></span></span>
					</a>  
				</div>
			</div>
		</div>
	</div>
<% end %> 
<div class="row-fluid">
	<div class="span12">

		<div class="box">
			<div class="box-header">
				<span class="title"><i class="icon-user"></i> New User</span>
			</div>

			<div class="box-content">
				<%= form_for([@account,@user], :url=>merchant_account_users_path(@account,@user),:html=>{:class=>"form-horizontal fill-up validatable"}) do |f| %>

				<div class="padded">

					<div class="control-group">
						<label class="control-label">Email</label>
						<div class="controls">
							<%= f.text_field :email, :placeholder=>"First Name", :class=>"validate[required]", "data-prompt-position"=>"topLeft"%>
						</div>
					</div>

					<div class="control-group">
						<label class="control-label">First Name</label>
						<div class="controls">
							<%= f.text_field :first_name, :placeholder=>"First Name", :class=>"validate[required]", "data-prompt-position"=>"topLeft"%>

						</div>
					</div>

					<div class="control-group">
						<label class="control-label">Username</label>
						<div class="controls">
							<%= f.text_field :last_name, :placeholder=>"First Name", :class=>"validate[required]", "data-prompt-position"=>"topLeft"%>
						</div>
					</div>

				</div>

				<div class="form-actions">
					<button type="submit" class="btn btn-blue">Save changes</button>
					<button type="button" class="btn btn-default">Cancel</button>
				</div>
				<% end %>

			</div>
		</div>

	</div>
</div>
