<%= render :partial=>'header' %> 
<div class="row-fluid">
	<div class="span12">

		<div class="box">
			<div class="box-header">
				<span class="title"><i class="icon-user"></i> New User</span>
			</div>

			<div class="box-content">
				<%= form_for(@user, :url=>merchant_add_user_path(@user), :method => "post", :html=>{:class=>"form-horizontal fill-up validatable",:multipart => true}) do |f| %>

				<div class="padded">

					<div class="control-group">
						<label class="control-label">Email</label>
						<div class="controls">
							<%= f.text_field :email, :placeholder=>"First Name", :class=>"validate[required]", "data-prompt-position"=>"topLeft"%>
						</div>
					</div>

					<div class="control-group">
						<label class="control-label">First Name</label>
						<div class="controls">
							<%= f.text_field :first_name, :placeholder=>"First Name", :class=>"validate[required]", "data-prompt-position"=>"topLeft"%>

						</div>
					</div>

					<div class="control-group">
						<label class="control-label">Last Name</label>
						<div class="controls">
							<%= f.text_field :last_name, :placeholder=>"First Name", :class=>"validate[required]", "data-prompt-position"=>"topLeft"%>
						</div>
					</div>

					<div class="control-group">
						<label class="control-label">Select Account</label>
						<div class="controls">
							<%= f.collection_select :id, @accounts, :id, :registered_company_name %>
						</div>
					</div>

					<div class="control-group">
					  <label class="control-label">Password</label>
					  <div class="controls">
					    <%= f.password_field :password, :placeholder=>"Password", :class=>"validate[required]", "data-prompt-position"=>"topLeft"%>
					  </div>
					</div>

					<div class="control-group">
					  <label class="control-label">Password Confirmation</label>
					  <div class="controls">
					    <%= f.password_field :password, :placeholder=>"Confirm Password", :class=>"validate[required]", "data-prompt-position"=>"topLeft"%>
					  </div>
					</div>

				</div>

				<div class="form-actions">
					<button type="submit" class="btn btn-blue">Save changes</button>
					<button type="button" class="btn btn-default">Cancel</button>
				</div>
				<% end %>

			</div>
		</div>

	</div>
</div>
