<%= render :partial=>'header' %>
<div class="row-fluid">
  <div class="span12">
    <div class="box">     
      <div class="box-header">
        <span class="title"><i class="icon-user"></i> Account Brands</span>
      </div>
      <div class="box-content">
       
        <div id="dataTables">
          <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
            <thead>
             <tr>
                <th>Brand </th>
                
                <th>Manage </th>
              </tr>
            </thead>  
            <tbody>
              <% @account_brands.each do |account_brand| %>
                <tr>
                  <td>
                    <% if account_brand.brand_id? %>
                      <%= link_to account_brand.brand.brand_name, merchant_account_account_brand_path(@current_account,account_brand) %> 
                      <span class="badge badge-blue"><%= account_brand.brand.category.category_name %></span>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to 'Destroy', merchant_account_account_brand_path(@current_account,account_brand), method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
              <% end %>  
            </tbody>
        </div>  
      </div>
    </div>
  <div class="clearfix"></div>
</div>