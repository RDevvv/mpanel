<%= render :partial=>'header' %>
<div class="pull-right">
  <%= link_to "New Account", new_merchant_account_path,:class=>"btn btn-info"%>
  <br/>
  <br/>  
</div>
<div class="row-fluid">
  <div class="span12">
    <div class="box">
      <div class="box-header">
        <span class="title">Accounts</span>
      </div>
      <div class="box-content">
        <div id="dataTables">

          <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
            <thead>
              <tr>
                <th><div>Name</div></th>
                <th></th>
              </tr>
            </thead>
            <tbody>

            <% @accounts.each do |account| %>
              <tr>
                <td>
                  <%= link_to account.name, merchant_account_path(account) %>
                </td>
                <td></td>
              </tr> 
            <% end %>
            </tbody>  
          </table>
          
      </div>  
    </div>
  </div>
</div>
</div>