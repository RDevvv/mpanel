<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-header">
                <span class="title"><i class="icon-account"></i> New Brand</span>
            </div>
            <div class="box-content">
                <%= nested_form_for([@current_account,@brand,@product], :url=>merchant_account_brand_products_path(@current_account,@brand,@product), :html=>{:class=>"form-horizontal fill-up validatable",:multipart => true}) do |f| %>
                    <div class="padded">

                    <div class="control-group">
                        <label class="control-label">Name</label>
                        <div class='controls'>
                            <%= f.text_field :name, :placeholder => 'Name', :class => 'validate[required]' %>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">Description</label>
                        <div class='controls'>
                            <%= f.text_area :description, :placeholder => 'Description', :class => 'validate[required]', :rows => 3 %>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Price</label>
                        <div class='controls'>
                            <%= f.text_field :price, :placeholder => 'Price', :class => 'validate[required]' %>
                        </div>
                    </div>
<%= f.fields_for :attachments %>
<%= f.link_to_add "Add a image", :attachments %>
                    <div class="form-actions">
						<button type="submit" class="btn btn-blue">Save changes</button>
                    </div>
                </div>
            <% end %>
            </div>
        </div>
    </div>
</div>
