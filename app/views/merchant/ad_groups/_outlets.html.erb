<div class="box-content">
  <div class="pull-right padded">
    <%= link_to "Add more outlets", more_outlets_merchant_account_account_brand_ad_ad_group_path(@current_account,@account_brand,@ad,@ad_group), :class=>"btn btn-info"%>
  </div>
  <div id="dataTables">
    <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
      <thead>
        <tr>
          <th width="8%"><div>Outlet Key</div></th>
          <th width="8%"><div>City</div></th>
          <th width="8%"><div>Area</div></th>
          <th width="8%"><div>Shop Number</div></th>
          <th width="8%"><div>Pincode</div></th>
          <th><div>Address</div></th>
          <th width="10%"><div>Phone Number</div></th>
          <th width="10%"><div>Mobile Number</div></th>
          <th width="8%"><div>Active</div></th>
          <th width="8%"><div>Verified</div></th>
          <th width="8%">Manage</th>
          </tr>
      </thead>
      <tbody>
      <% @outlets.each do |outlet| %>
        <tr>
          <td><%= outlet.outlet_key %></td>
          <td><%= !outlet.area.city.city_name.nil? ? outlet.area.city.city_name : " " %></td>
          <td><%= !outlet.area.area_name.nil? ? outlet.area.area_name : " "%></td>
          <td><%= outlet.shop_no %></td>
          <td><%= !outlet.area.pincode.nil? ? outlet.area.pincode : " " %></td>
          <td><%= outlet.address %></td>
          <td><%= outlet.cleanup_landline %></td>
          <td><%= outlet.mobile_number %></td>
          <td>
            <%= check_box_tag :is_active, outlet.is_active?,outlet.is_active?,:disabled=>true%>
          </td>
          <td>
            <%= check_box_tag :is_verified,outlet.is_verified,outlet.is_verified,:checked=>outlet.is_verified,:disabled=>true %>
          </td>          
          <td>
            <% if can? :destroy, outlet %>
              <%=link_to "Delete",delete_outlet_merchant_account_account_brand_ad_ad_group_path(@current_account,@account_brand,@ad,@ad_group,:outlet_id=>outlet.id),:confirm=>"Are you sure?" %>
            <% end %>
            </td>
        </tr> 
      <% end %>
      </tbody>  
    </table>
</div>
  