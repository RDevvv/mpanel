<%#end %>
<div class="pull-right">
  <%= link_to "Add Outlet",new_merchant_account_account_brand_outlet_path(@current_account,@account_brand),:class=>"btn btn-info"%>
  <br/>
  <br/>
</div>
<div class="row-fluid">
  <div class="span12">
    <div class="box">
      <div class="box-header">
        <span class="title">Brands</span>
      </div>
      <div class="box-content">
        
        <div id="dataTables">
          <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
            <thead>
              <tr>
                <th>Outlet Key</th>
                <th>Address</th>
                <th>Status</th>
                <th>Verified</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
            <% @outlets.each do |outlet| %>
              <tr>
                <td><%= outlet.outlet_key %></td>
                <td><%= outlet.address %></td>
                <td>
                <% if outlet.is_active == true %>
                    <%= check_box_tag :is_active,  true, :checked=>true%>
                  <% else %>
                    <%= check_box_tag :is_active %>
                  <% end %>
                </td>
                <td>
                  <% if outlet.is_verified == true %>
                    <%= check_box_tag :is_verified, true, :checked=>true%>
                  <% else %>
                    <%= check_box_tag :is_verified %>
                  <% end %>
                </td>
                <td>
                  <%= link_to 'Edit', edit_merchant_account_account_brand_outlet_path(@current_account,@account_brand,outlet) %> | 
                
                  <%= link_to 'Destroy', merchant_account_account_brand_outlet_path(@current_account,@account_brand,outlet), method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr> 
            <% end %>
            </tbody>  
          </table>
      </div>
      
    </div>
  </div>
</div>  
