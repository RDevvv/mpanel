<%= render :partial=>'header' %>

<div class="row-fluid">
  <div class="span12">
    <div class="box">

      <div class="box-header">
        <span class="title">Outlets</span>
      </div>
      <%= form_tag import_merchant_account_account_brand_outlets_path(@current_account,@account_brand), action: :import, multipart: true do %>
        <div class="box-content">
          <div id="dataTables">
            <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
            
              <thead>
                <tr>
                  <th>Outlet Key</th>
                  <th>Address</th>
                  <th>Phone_number</th>
                  <th>mobile_numbe</th>
                  <th>email_id</th>
                  <th>Verify Records</th>
                </tr>
              </thead>

              <tbody>
              <% @csv_records.each do |row| %>
                <tr>
                  <td></td>
                  <td><%= row[1] %></td>
                  <td><%= row[3] %></td>
                  <td><%= row[5] %></td>
                  <td><%= row[6] %></td>
                  <td><input type="checkbox" name="option1" value="Verify">Verify Record</td>
                </tr> 
              <% end %>
              </tbody>  

            </table>
          </div>
        </div>
        <div class="form-actions" style="margin-top: 0px;"> 
          <div class="pull-right" style="padding-right: 35px;">
            <button type="submit" class="btn btn-blue">Save</button>
          </div>
        </div>
      <% end %>
    </div>
  </div>  
</div>