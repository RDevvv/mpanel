<%= render :partial=>'header' %>
<div class="pull-right">
  <%= link_to "Donwload Templates", download_outlet_template_merchant_account_account_brand_outlets_path(@current_account,@account_brand), :class=>"btn btn-info"%>
  <br/>
  <br/>  
</div>
<div class="row-fluid">
  <div class="span12">
    <div class="box">
      <div class="box-header">
        <span class="title"><i class="icon-account"></i> Upload CSV File</span>
      </div>
      <div class="box-content">

          <%= form_tag(import_merchant_account_account_brand_outlets_path(@current_account,@account_brand),  :multipart=> true,:class=>"form-horizontal fill-up validatable") do %>
            <div class="padded">
              <div class="control-group">
                <label class="control-label">Upload CSV</label>
                <div class="controls span4">
                  <%= file_field_tag :file ,:class=>"span3" %>
                </div>
                <div class="clear" style="clear:both"></div>
              </div>
          </div>
          
          <div class="form-actions">
            <button type="submit" class="btn btn-blue">Upload Outlets</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>         
