<%= content_for :content_header do %>
  <div class="container-fluid">
    <div class="row-fluid">
     <div class="area-top clearfix">
      <div class="pull-left header">
        <h3 class="title">
          <i class="icon-user"></i>
          Account's Brand
        </h3>
      </div>
    </div>
  </div>
<% end %>
<%= content_for :breadcrumbs do %>
  <div class="container-fluid padded">
    <div class="row-fluid">
      <!-- Breadcrumb line -->
      <div id="breadcrumbs">
        <div class="breadcrumb-button blue">
          <a href="<%= merchant_merchants_path%>">
            <span class="breadcrumb-label"><i class="icon-home"></i> Home</span>
            <span class="breadcrumb-arrow"><span></span></span>
          </a>  
        </div>
        <div class="breadcrumb-button blue">
          <a href="<%= merchant_account_path(@account)%>">
            <span class="breadcrumb-label">
              <i class="icon-account"></i> Account
            </span>
            <span class="breadcrumb-arrow"><span></span></span>
          </a>
        </div>
        <div class="breadcrumb-button">
          <a href="<%= merchant_account_path(@account)%>">
            <span class="breadcrumb-label">
              <i class="icon-user"></i> Account Brand
            </span>
            <span class="breadcrumb-arrow"><span></span></span>
          </a>  
        </div>
      </div>
    </div>
  </div>
<% end %>   
<div class="row-fluid">
  <div class="">
  	<%= form_tag(merchant_account_account_brands_path(@account),:method=>:get) do |f|%>
  		<div class="">
				Link Brands to <%= @account.registered_company_name%> Account<br><br>
				<%= text_field_tag "search_name",params[:search_name],:placeholder=>"Search By Brand Name"%>
				<%= submit_tag "Search", :class=>"btn btn-success btn-search"%>
			</div>
			<div class="clearfix"></div>
			<div>
				<div class="span6">
					<table class="table table-striped table-bordered info">
			      <tr>
			        <th>All Brands</th>
			      </tr>
		      
	      		<% if @brands.blank?%>
			      	<td>
			      		Add <%= link_to (params[:search_name]|| "brand"), new_merchant_account_brand_path(@account) %> to GullakMaster Database
			      	</td>
			    	<% else %>
				      <% @brands.each do |brand| %>
					    	<% category = brand.category%>
					      <tr>
					        <td>
					          <%= link_to brand.brand_name %>
					          <% if !brand.category.nil? %>
					          	<%= category.category_name %>
					          <% end %>
					          <% if brand.is_verified == true %>
					    	      <% verification_status = "Verified" %>
					          <% else %>
					      	    <% verification_status = "Not Verified" %> 
					          <% end %>
					          <%= verification_status %>
					        </td>
					      </tr>
					    <% end %>
			    	<% end %>
		    	</table>
				</div>
				<div class="span6">
					<table class="table table-striped table-bordered info">
			      <tr>
			        <th>Selected Brands </th>
			      </tr>
				   	<% @account_brands .each do |brand| %>
					    <% category = brand.category %>
				      <tr>
				        <td>
				          <%= link_to brand.brand_name , merchant_account_brand_outlets_path(:account_brand_id=>brand.id) %>
				          <% if !brand.category.nil? %>
					          <%= category.category_name %>
					        <% end %>
				          <% if brand.is_verified == true %>
				    	      <% verification_status = "Verified" %>
				          <% else %>
				      	    <% verification_status = "Not Verified" %> 
				          <% end %>
				          <%= verification_status %>
				        </td>
				      </tr>
				    <% end %>  
		    	</table>
				</div>
			</div>
			<div class="clearfix"></div>
			<div class="span4 offset5">
				<%= button_tag "Cancel",:class=>"btn btn-default btn-lg active"%>
		    <%= submit_tag "Save",:class=>"btn btn-primary"%>
			</div>
		<% end %>
	</div>
  <div class="clearfix"></div>
</div>