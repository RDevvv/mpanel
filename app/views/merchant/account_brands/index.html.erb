<%= render :partial=>'header' %>
<div class="row-fluid">
  <div class="span12">

  	<div class="box">			
			<div class="box-header">
				<span class="title"><i class="icon-user"></i> Account Brands</span>
			</div>

			<div class="box-content">
				<%= form_tag(merchant_account_account_brands_path(@current_account),:method=>:get,:class=>"form-inline fill-up validatable") do |f|%>
				<div class="padded">
					<div class="control-group">
            <label class="control-label">Brand</label>
            <div class="controls">
             <%= select_tag :brand_ids,options_from_collection_for_select(@brands,:id,:brand_name),:multiple=>true,:class=>"chzn-select" %> 
            </div>
          </div>
           <button type="submit" class="btn btn-blue">Add Brand</button>

          
					
				</div>	
				<% end %>	
				<div id="dataTables">
					<table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
						<thead>
						 <tr>
		            <th>Brand </th>
		            <th>Alias </th>
		            <th>Code </th>
		          </tr>
		        </thead>  
		        <tbody>
		        	<% @account_brands.each do |brand| %>
	              <tr>
	                <td><%= brand.brand_name %> <span class="badge badge-blue"><%=brand.category.category_name %></span></td>
	                <td><%= brand.brand_alias %></td>
	                <td><%= brand.brand_code %></td>
	              </tr>
	            <% end %>  
		        </tbody>
				</div>	
			</div>
  		
		</div>
  <div class="clearfix"></div>
</div>