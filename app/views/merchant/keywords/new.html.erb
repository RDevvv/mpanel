<%= nested_form_for([@current_account,@account_brand,@ad,@keyword], :url=>merchant_account_account_brand_ad_keywords_path(@current_account,@account_brand,@ad,@keyword), :html=>{:class=>"form-horizontal fill-up validatable",:multipart => true}) do |f| %>


	<div class="padded">

    <div class="control-group">
		  <label class="control-label">Keywords</label>
		  <div class="controls">
	    	<%= f.text_field :keyword, :placeholder=>"Enter Keywords", :class=>"validate[required,maxSize[60]]", "data-prompt-position"=>"topLeft"%>
		  </div>
		</div>

		<div class="control-group">
		  <label class="control-label">Keyword Alias</label>
		  <div class="controls">
	    	<%= f.text_area :keyword_alias, :placeholder=>"Keyword Aliases separated by comma", :class=>"validate[required]", "data-prompt-position"=>"topLeft",:rows=> 3 %>
		  </div>
		</div>

		<br>
    <%= f.fields_for :attachments %>
    <%= f.link_to_add "Add an image", :attachments %>
  </div>  

  <div class="form-actions">
    <button type="submit" class="btn btn-blue">Save</button>
  </div>

<% end %>	