<%= form_tag(add_keywords_merchant_account_account_brand_ad_path(@current_account,@account_brand,@ad),:class=>"form-horizontal fill-up validatable",:multipart => true) do |f| %>

	<div class="padded">

    <div class="control-group">
		  <label class="control-label">Keywords</label>
		  <div class="controls">
	    	<%= text_field_tag "keyword[keyword]",'', :placeholder=>"Enter Keywords", :class=>"validate[required,maxSize[60]]", "data-prompt-position"=>"topLeft"%>
		  </div>
		</div>

		<div class="control-group">
		  <label class="control-label">Keyword Alias</label>
		  <div class="controls">
	    	<%= text_area_tag "keyword[keyword_alias]",'', :placeholder=>"Keyword Aliases separated by comma", :class=>"validate[required,maxSize[16]]", "data-prompt-position"=>"topLeft",:rows=> 3 %>
		  </div>
		</div>

  </div>  

  <div class="form-actions">
    <button type="submit" class="btn btn-blue">Save</button>
  </div>

<% end %>	