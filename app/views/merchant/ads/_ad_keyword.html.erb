<%= form_for([@current_account,@account_brand,@ad], :url=>merchant_account_account_brand_ad_path(@current_account,@account_brand,@ad), :html=>{:class=>"form-horizontal fill-up validatable",:multipart => true}) do |f| %>
	<div class="padded">
    <div class="control-group">
		  <label class="control-label">Keywords</label>
		  <div class="controls">
		    <%= f.collection_select :keyword_ids,@keywords,:id,:keyword,{},{:multiple=>true,:class=>"chzn-select"} %>
		  </div>
		</div>
  </div>  
  <div class="form-actions">
    <button type="submit" class="btn btn-blue">Save</button>
  </div>
<% end %>	