 <div id="dataTables">
  <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
    <thead>
      <tr>
        <th>Ad</th>
        <th>Start Date</th>
        <th>Expiry Date</th>
        <th>SMS Text</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% ads.each do |ad| %>
      <tr>
        <td>
          <%= link_to ad.ad_title,merchant_account_account_brand_ad_path(@current_account,@account_brand,ad)  %>
        </td>
        <td>
          <%= ad.start_date %>
        </td>
        <td>
          <%= ad.expiry_date %>
        </td>
        <td>
          <%= ad.sms_text %>
        </td>
        <td> 
          <%= link_to "Edit",edit_merchant_account_account_brand_ad_path(@current_account,@account_brand,ad) %> |
          <%= link_to 'Destroy', merchant_account_account_brand_ad_path(@current_account,@account_brand,ad), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr> 
      <% end %>
    </tbody>  
  </table>
</div>