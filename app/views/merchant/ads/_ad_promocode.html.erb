<div style="margin-left:15px;">
	<br>
	<%= link_to "Create Set",new_merchant_account_account_brand_ad_ad_promocode_path(@current_account,@account_brand,@ad),:class=>"btn btn-info"%>
	<br/>  
</div>
<div class="clearfix"></div>
<div id="dataTables">
  <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
    <thead>
      <tr>
        <th><div>Name</div></th>
        <th><div>Promocode</div></th>
        <th><div>Cap</div></th>
        <th><div>Usage</div></th>
        <th><div>Manage Promocodes</div></th>
      </tr>
    </thead>
    <tbody>
      <% @ad_promocodes.each do |ad_promocode| %>
      <tr>
        <td>
          <%= ad_promocode.set_name %>
        </td>
        <td>
          <%= ad_promocode.promocode %>
        </td>
        <td>
          <%= ad_promocode.cap %>
        </td>
        <td>
          <%= ad_promocode.usage %>
        </td>
        <td> 
          <% link_to "Edit",edit_merchant_account_account_brand_ad_ad_promocode_path(@current_account,@account_brand,@ad,ad_promocode) %> 
          <%= link_to 'Delete', merchant_account_account_brand_ad_ad_promocode_path(@current_account,@account_brand,@ad,ad_promocode), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr> 
      <% end %>
    </tbody>  
  </table>
</div>