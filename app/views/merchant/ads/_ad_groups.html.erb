 <div id="dataTables">
  <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
    <thead>
      <tr>
        <th>Name</th>
        <th>Promocode</th>
        <th>Active</th>
      </tr>
    </thead>
    <tbody>
      <% ad_groups.each do |ad_group| %>
      <tr>
        <td>
          <%=link_to ad_group.name ,merchant_account_account_brand_ad_ad_group_path(@current_account,@account_brand,@ad,ad_group)%>
        </td>
        <td>
          <%= ad_group.ad_promocodes.size %>
        </td>
        <td>
          <%= form_tag(activate_promocodes_merchant_account_account_brand_ads_path(@current_account,@account_brand,:id=>@ad.id)) do %>
            <% if ad_group.is_active %>
              <%= check_box_tag :is_active, true,:checked=>true %>
            <% else %>
              <%= check_box_tag :is_active %>
            <% end %>
            Activate/Deactivate Promocodes
            <button type="submit" class="btn btn-blue">Submit</button>
          <% end %>           
        </td>
      </tr> 
      <% end %>
    </tbody>  
  </table>
</div>