<div class="control-group">
  <label class="control-label">Ad Title</label>
  <div class="controls">
    <%= f.text_field :ad_title, :placeholder=>"Title", :class=>"validate[required]", "data-prompt-position"=>"topLeft"%>               
  </div>
</div>

<div class="control-group">
  <label class="control-label">Pickup Days of Week</label>
  <div class="controls">
    <label class="checkbox inline" style="padding-left:20px;">
      <%= f.check_box :is_monday,:class=>"inline-checkbox padded",:style=>"width:20px;" %>Monday
    </label>
    <label class="checkbox inline" style="padding-left:20px;">
      <%= f.check_box :is_tuesday,:class=>"inline-checkbox padded",:style=>"width:20px;" %>Tuesday
    </label>
    <label class="checkbox inline" style="padding-left:20px;">
      <%= f.check_box :is_wednesday,:class=>"inline-checkbox padded",:style=>"width:20px;" %>Wednesday
    </label>  
    <label class="checkbox inline" style="padding-left:20px;">
      <%= f.check_box :is_thursday,:class=>"inline-checkbox padded",:style=>"width:20px;" %>Thursday
    </label>  
    <label class="checkbox inline" style="padding-left:20px;">
      <%= f.check_box :is_friday,:class=>"inline-checkbox padded",:style=>"width:20px;" %>Friday
    </label>  
    <label class="checkbox inline" style="padding-left:20px;">
      <%= f.check_box :is_saturday,:class=>"inline-checkbox padded",:style=>"width:20px;" %>Saturday
    </label>  
    <label class="checkbox inline" style="padding-left:20px;">
      <%= f.check_box :is_sunday,:class=>"inline-checkbox padded",:style=>"width:20px;" %>Sunday
    </label>  
  </div>    
</div>
<div class="row-fluid">
  <div class="span3">
    <div class="control-group">
      <label class="control-label">Start Date</label>
      <div class="controls">
        <%= f.text_field :start_date, :placeholder=>"Start Date", :class=>"date-picker", "data-prompt-position"=>"topLeft",:id=>"start_date"%>               
      </div>
    </div>
  </div>
  <div class="span3">
    <div class="control-group">
      <label class="control-label">Expiry Date</label>
      <div class="controls">
        <%= f.text_field :expiry_date, :placeholder=>"Expiry Date", :class=>"date-picker", "data-prompt-position"=>"topLeft",:id=>"end_date"%>               
      </div>
    </div>
  </div>  
  <div class="span4">
    <div class="control-group">
      <label class="control-label">Exclusive Add</label>
      <div class="controls">
        <%= f.check_box :is_exclusive %>  
      </div>
    </div>
  </div>  

</div>
<div class="control-group">
  <label class="control-label">Sms Text (120 Chars)</label>
  <div class="controls">
    <%= f.text_field :sms_text, :placeholder=>"Sms Text", :class=>"validate[required]", "data-prompt-position"=>"topLeft"%>               
  </div>
</div>
<div class="control-group">
  <label class="control-label">Keywords</label>
  <div class="controls">
    <%= f.collection_select :keyword_ids,@keywords,:id,:keyword,{},{:multiple=>true,:class=>"chzn-select"} %>
    
  </div>
</div>


<%= content_for :javascript  do %>
<script type="text/javascript">
$(document).ready(function(){
  $('#start_date').datepicker({
      format: 'dd/mm/yyyy',
  }).on('changeDate', function(ev){
    $('#end_date').datepicker('setStartDate', ev.date);
  });
  $('#end_date').datepicker({
     format: 'dd/mm/yyyy',
  });
});
</script>
<% end %>
