<%= render :partial=>'header' %>
<div class="pull-right">
  <%= link_to "Create Ad",new_merchant_account_brand_ad_path,:class=>"btn btn-info"%>
  <br/>
  <br/>  
</div>
<div class="row-fluid">
  <div class="span12">
    <div class="box">
      <div class="box-header">
        <span class="title">Brands</span>
      </div>
      <div class="box-content">
        <%= form_tag(merchant_account_brand_ads_path(@account_brand),:method=>:get) do %>
        <div id="dataTables">
          <table cellpadding="0" cellspacing="0" border="0" class="dTable responsive">
            <thead>
              <tr>
                <th>Ad</th>
                <th>Start Date</th>
                <th>Expiry Date</th>
                <th>SMS Text</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
            <% @ads.each do |ad| %>
              <tr>
                <td>
                  <%= ad.ad_title %>
                </td>
                <td>
                  <%= ad.start_date %>
                </td>
                <td>
                	<%= ad.expiry_date %>
                </td>
                <td>
                	<%= ad.sms_text %>
                </td>
                <td> <%= link_to 'Destroy', merchant_account_brand_ad_path(@current_account,ad), method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr> 
            <% end %>
            </tbody>  
          </table>
      </div>
      <% end %>  
    </div>
  </div>
</div>  