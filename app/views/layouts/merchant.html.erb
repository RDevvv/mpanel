<!doctype html>
<html>
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0">
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:400,600,800">
    <title><%= content_for?(:title) ? yield(:title) : "Gullak Master" %></title>
      <!--[if lt IE 9]>
        <%#= javascript_include_tag "vendor/html5shiv" %>
        <%#= javascript_include_tag "vendor/excanvas" %>
        <![endif]-->
        <%= stylesheet_link_tag    "merchant", media: "all"%>
        <%= javascript_include_tag "merchant"%>

        <%= csrf_meta_tags %>
        <%= yield(:head) %>

  </head>
  <body>

    <%= render :partial=>'merchant/shared/top_navigation' %>
    <%= yield :sidebar %>
    <%#= render :partial=>'merchant/shared/side_navigation' %>
    <div class="main-content no_sidebar >
      <%= yield :content_header %>
      <%= yield :breadcrumbs %>
      <div class="container-fluid padded">
        <%= yield %>
      </div>
    </div>

  </body>
</html>


