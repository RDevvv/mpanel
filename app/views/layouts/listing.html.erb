<meta property="og:image:type" content="image/png" />
<meta property="og:description" content="Shoffr’s mobile app alerts you about free deals and offers at nearby and relevant stores. You can unlock an offer, walk into the sotre and redeem the offer instantly." >


<!-- Twitter-->
<meta name="twitter:card" content="summary" >
<meta name="twitter:site" content="@_shoffr">
<meta name="twitter:title" content="Shoffr: Shop with an offer" >
<meta name="twitter:url" content="http://m.shoffr.com/#/deals/outlets?location=bandra&search=all&latitude=undefined&longitude=undefined&view=outlet_view">
<meta name="twitter:image:src" content="http://shoffr.com/assets/social-media/shoffr_social_media_logo.png" >
<meta name="twitter:description" content="Shoffr’s mobile app alerts you about free deals and offers at nearby and relevant stores. You can unlock an offer, walk into the sotre and redeem the offer instantly." >

<link rel="canonical" href="http://m.shoffr.com/#/deals/outlets?location=bandra&search=all&latitude=undefined&longitude=undefined&view=outlet_view" />
<%= csrf_meta_tags %>

<!-- Le HTML5 shim, for IE6-8 support of HTML elements -->

<%= stylesheet_link_tag "application", :media => "all" %>
<script src="http://maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>
<%= javascript_include_tag "application" %>
<%= favicon_link_tag "favicon.ico" %>

