       }(document, 'script', 'facebook-jssdk'));
    </script>

<div id="header">
    <!--<div class="map-btn-div"><a href="#" class="map-btn-lft2">&nbsp;</a></div>-->
    <ul class="left-icons">
        <li><a href="#menu" class="srchlink3"></a></li>
    </ul>
    <div class="head-brand"><%= link_to 'GullakMaster', root_path %></div>
    <ul class="right-icons">
        <li><a href="#" class="shr" onclick="$('#popup_share').modal('show')"></a></li>
        <li><%= link_to "", {:controller => 'home', :action => action_name, :location => params[:location], :longitude => params[:longitude], :latitude => params[:latitude], :search => params[:search], :view => get_opposite_view(params[:view])}, :class => get_opposite_view_class(params[:view])%></li>
    </ul>

    <nav id="menu">
        <ul>
            <li class="subcat">Sort by:</li>
            <li><%= link_to "Distance", {:controller => 'home', :action => action_name, :location => params[:location], :latitude => params[:latitude], :longitude => params[:longitude], :search => params[:search], :filter => 'distance', :view => params[:view]} %></li>
            <li><%= link_to "Expiry date", {:controller => 'home', :action => action_name, :location => params[:location], :latitude => params[:latitude], :longitude => params[:longitude], :search => params[:search], :filter => 'ad_expiry_date', :view => params[:view]} %></li>
            <li><%= link_to "Hot picks", {:controller => 'home', :action => action_name, :location => params[:location], :latitude => params[:latitude], :longitude => params[:longitude], :search => params[:search], :filter => 'ad_usage', :view => params[:view]} %></li>
            <li>&nbsp;</li>
            <li class="subcat">Filter by:</li>
            <li style="margin-top:10px;">
            <%= form_tag :outlet_search, :method => 'GET', :id => 'searchForm' do |f|  %>
                <fieldset>
                <div class="input3">
                    <%= hidden_field_tag :location, params[:location] %>
                    <%= hidden_field_tag :latitude, params[:latitude] %>
                    <%= hidden_field_tag :longitude, params[:longitude] %>
                    <%= hidden_field_tag :view, params[:view] %>
                    <%= text_field_tag :search, nil,:id => 's3', :placeholder => "Enter Category..." %>
                </div>
                <div class="example-text">e.g: coffee, bags, shirts, eyewear</div>
            </fieldset>
        <% end %>
            </li>

            <li><%= link_to "Accessories", {:controller => 'home', :action => 'outlet_search', :location => params[:location], :latitude => params[:latitude], :longitude => params[:longitude], :search => 'Accessories', :filter => 'ad_usage', :view => params[:view]} %></li>
            <li><%= link_to "Apparels", {:controller => 'home', :action => 'outlet_search', :location => params[:location], :latitude => params[:latitude], :longitude => params[:longitude], :search => 'Apparels', :filter => 'ad_usage', :view => params[:view]} %></li>
            <li><%= link_to "Electronics", {:controller => 'home', :action => 'outlet_search', :location => params[:location], :latitude => params[:latitude], :longitude => params[:longitude], :search => 'Electronics', :filter => 'ad_usage', :view => params[:view]} %></li>
            <li><%= link_to "Food", {:controller => 'home', :action => 'outlet_search', :location => params[:location], :latitude => params[:latitude], :longitude => params[:longitude], :search => 'Food', :filter => 'ad_usage', :view => params[:view]} %></li>
            <li><%= link_to "Mobile", {:controller => 'home', :action => 'outlet_search', :location => params[:location], :latitude => params[:latitude], :longitude => params[:longitude], :search => 'Mobile', :filter => 'ad_usage', :view => params[:view]} %></li>
            <li><%= link_to "Shoes", {:controller => 'home', :action => 'outlet_search', :location => params[:location], :latitude => params[:latitude], :longitude => params[:longitude], :search => 'Shoes', :filter => 'ad_usage', :view => params[:view]} %></li>

            <li class="subcat" style="float:left; margin:7% 0 0 -7%;"><%= link_to 'Provide Feedback', :new_customer_feedback%></li>
        </ul>
    </nav>
</div>
<footer>GullakMaster &copy; 2014</footer>
<%= bootstrap_flash %>
<%= render :partial => "back_to_top" %>
