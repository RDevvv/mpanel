</head>
<body>
<%#= render :partial => 'shared/facebook_share' %>

<div ng-controller="HomeController">
<snap-drawer>
    <nav class="mm-list">
        <ul>
            <li class="subcat">Change Location:</li>
            <li>
                <form ng-submit='listing_form()' method='get' id='searchForm'>
                    <fieldset>
                        <div class="input2">
                            <input type='text' name='location' id='s' placeholder ='Enter Location' ng-model='topsearch'>
                        </div>
                    </fieldset>
                </form>
            </li>
            <li>&nbsp;</li>
            <li class="subcat"><a class="no-left-pad" href="/#/profile" snap-close>My Profile</a></li>
            <li class="subcat">Sort by:</li>
            <li><a href="" class='left-menu-buttons' ng-click="predicate = 'distance'; reverse=false" snap-close>Distance</a></li>
            <li><a href="" class='left-menu-buttons' ng-click="predicate = 'ad_expiry_date'; reverse=false" snap-close>Expiry Date</a></li>
            <li><a href="" class='left-menu-buttons' ng-click="predicate = 'ad_usage'; reverse=true" snap-close>Hotpicks</a></li>
            <li>&nbsp;</li>

            <li class="subcat"><a href="mailto:kaustubh@shoffr.com?subject=Report an Offer&body=Brand: %0A Offer Details: %0A Expiry Date: %0A Address:" snap-close>Report An Offer</a></li>
            <li class="subcat">
                <a href="mailto:hello@shoffr.com?subject=Feedback" snap-close>Provide Feedback</a>
            </li>
            
        </ul>
    </nav>
</snap-drawer>

<snap-content>

<div id="header" ng-class='top_menu_class()'>
    <ul class='left-icons'>
        <li><a href='' class="srchlink3" snap-toggle="left"></a></li>
        <!--<li><a href="#" class="notification"></a></li>-->
    </ul>
    <div class="head-brand"><top-header></top-header></div>
    <ul ng-class='right_buttons_class()'>
        <li><a href='' class="new_top_share shr" ng-click="top_share()" ng-controller='ShareController' ngg="update_top_share_url($(this))"></a></li>
        <!--<li><a href='' ng-class='view_button()' ng-click='map_view_link()'></a></li>-->
    </ul>

</div>
  
<div class="container-location" >
    <div class="row-fluid">
        <div ng-class='top_search_class()'>
            <div class="search-div3">
                <form ng-submit='category_form()' method='get'>
                    <fieldset>
                        <div class="input">
                            <input type='text' name='search' id='s3' placeholder ='I am looking for...' ng-model='category'>
                        </div>
                    </fieldset>
                    <!--<div class="non_grey_filter">&nbsp;</div>-->
                    <input type='submit' value=''   name=''   ng-class= "set_class()" ng-click='set_attribute("filter")'>
                    <input type='submit' value='Go' name='Go' class= "btn btn-submit2" ng-click='set_attribute("search")'>
                </form>
            </div>
        </div>
        #<div id='view' ng-view class='view'>
        </div>
    </div>
</div>
</snap-content>
</div>
<footer>GullakMaster &copy; 2014</footer>
<%= render :partial => "back_to_top" %>
<%= render :partial => "new_mobile_number_modal" %>
<%= render :partial => "verify_mobile_number" %>
<%= render :partial => "share_partial" %>
