                <h3 class="entry-title">
                  <%= link_to article.blog_title, article %>
                </h3>
                <address class="byline author vcard">By <a title="" class="url fn"><%= link_to article.author, article.author_linkedin_url %></a> </address>
              </header>
              <div class="entry-content2">
                <p><%=h truncate(article.blog_excerpt, :length => 150) %> <a class="more-link"><%= link_to 'Read moreâ€¦', article %></a></p>
              </div>
            </article>
            <% end %>
          </div>
        </section>
      </div>
