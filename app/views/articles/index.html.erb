              <div class="w190 left">
                <% if article.attachments.present? %>
                    <%= link_to image_tag(article.attachments.order(:id).first.image, :height => "127", :width => "190", :alt=> article.image_alt_text, :title=> article.image_alt_text), article %>
                <% end %>
                <span class="caption"><%= article.summary_image_caption %></span>
              </div>
              <header class="postHeader">
                <div class="postMetaHeader">
                  <span class="kicker"><%= article.blog_category %></span>
                  <!-- date published -->
                  <time><%= article.created_at.strftime("%e %b %Y %H:%m:%S%p") %></time>
                  <!--<span class="ccount"><i class="icon"></i><a href="blog-detail.html" class="ccount">12</a></span>-->
