<div id="new-meeting" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-body">
        <%= form_tag '/get_customer_number', :class => 'customer-mobile-number-form form-horizontal' do |f| %>
            <div class="control-group">
                <label class="control-label"> +91</label>
                <div class="controls">
                    <%= text_field_tag :mobile_number,'', :class => 'datetime_select' %>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <%= submit_tag 'submit', :class => 'btn btn-primary' %>
        </div>
    <% end %>
</div>
