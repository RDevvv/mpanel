<div id="new-meeting" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-body">
            <div class="sub-txt2">Get offer codes by SMS!</div>
        <%= form_tag '/customers', :validate => true, :class => 'customer-mobile-number-form form-horizontal' do  %>
            <div class="control-group">
            <label class="control-label"> +91</label>
            <div class="controls">
                <%= text_field_tag :mobile_number,'', :class => 'datetime_select', :placeholder => "Enter mobile number" %>
            </div>
        </div>
        <%= hidden_field_tag 'customer_uuid', cookies[:customer_uuid] %>
        <%= submit_tag 'submit', :class => 'btn btn-primary' %>
    <% end %>
    </div>
</div>
