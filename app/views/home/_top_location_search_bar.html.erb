<div class="span12">
    <div class="search-div3">
        <% location_search_url = get_location_search_url%>
        <%= form_tag location_search_url, :method => 'GET', :id => 'searchForm' do |f|  %>
            <fieldset>
            <div class="input">
                <%= text_field_tag :location, nil,:id => 's', :placeholder => get_nearest_area %>
            </div>
            </fieldset>
        <% end %>
        <div class="auto-locate"><%= link_to image_tag("navigation-icon2.png"), '#', :onclick => 'change_location()', :id => 'change_location' %></div>
    </div>
</div>

