<div id="verification" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <button type="button" class="modal_close" data-dismiss="modal" aria-hidden="true">&nbsp;</button>
    <div style="width:100%; overflow-x:hidden; margin:0; padding:0;" class="modal-body">
            <div class="sub-txt2">Verification code sent by SMS</div>
            <%= form_tag '/check_verification_code.json', :method => 'POST', :validate => true, :class => 'customer-verification-code-form cust-ver form-horizontal' do  %>
            <div class="control-group">
            <div class="controls">
                <%= text_field_tag :verification_code,'', :class => 'datetime_select', :placeholder => "Enter verification code" %>
            </div>
        </div>
        <%= hidden_field_tag 'customer_uuid', cookies[:customer_uuid] %>
    <% end %>
    </div>
</div>
